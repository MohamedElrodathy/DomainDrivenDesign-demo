#!/usr/bin/env bash

# Exit immediately if a command exits with a non-zero status.
set -e

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

. ${SCRIPT_DIR}/inc/all.sh

cd_project_root

container_must_be_up 0

(set -x;docker-compose exec php bash -c 'TEMP=$(mktemp); sed "s/^\(..*=..*\)$/export \1/g" .env > ${TEMP}; source ${TEMP}; php vendor/bin/phpunit; rm ${TEMP}')
